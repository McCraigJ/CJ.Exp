@model ExpenseTypeVM
@{
  ViewData["Title"] = "Edit Expense Type";
}


<div class="row">
  <div class="col-md-4">
    <section>
      <form method="post" asp-action="DoEdit">
        <input type="hidden" asp-for="Id" />
        <h4>Edit Expense Type</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
          <label asp-for="ExpenseType"></label>
          <input asp-for="ExpenseType" class="form-control" />
          <span asp-validation-for="ExpenseType" class="text-danger"></span>
        </div>
        <div class="checkbox">
          <label asp-for="UpdateExpensesWithUpdatedType">
            <input asp-for="UpdateExpensesWithUpdatedType" type="checkbox" />
            Update existing Expense Types
          </label>          
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-default">Update</button>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-error" formaction="BackToIndex">Cancel</button>
        </div>
      </form>
    </section>
  </div>

</div>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
