@using Microsoft.AspNetCore.Mvc.Rendering;
@model ExpenseVM


<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
  <label asp-for="ExpenseTypeId"></label>
  <select asp-for="ExpenseTypeId" class="form-control" asp-items="@Model.ExpenseTypes"></select>
  <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
</div>

<div class="form-group">
  Or
  <label asp-for="NewExpenseType"></label>
  <input asp-for="NewExpenseType" class="form-control" type="text" />
  <span asp-validation-for="NewExpenseType" class="text-danger"></span>
</div>

<div class="form-group">
  <label asp-for="ExpenseValue"></label>
  <input asp-for="ExpenseValue" class="form-control" type="number" />
  <span asp-validation-for="ExpenseValue" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="ExpenseDate"></label>
  <input asp-for="ExpenseDate" type="date" class="form-control" />
  <span asp-validation-for="ExpenseDate" class="text-danger"></span>
</div>

