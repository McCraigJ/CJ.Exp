@model ExpenseVM
@{
  ViewData["Title"] = "Edit Expense";
}


<div class="row">
  <div class="col-md-4">
    <section>
      <form method="post" asp-action="DoEdit">
        <input type="hidden" asp-for="Id" />
        <h4>Edit an Expense</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>

        @await Html.PartialAsync("_ExpenseFieldsPartial")

        <div class="form-group">
          <button type="submit" class="btn btn-default">Update</button>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-error" formaction="BackToIndex">Cancel</button>
        </div>
      </form>
    </section>
  </div>

</div>

@section Scripts {
  @await Html.PartialAsync("_ValidationScriptsPartial")
}
