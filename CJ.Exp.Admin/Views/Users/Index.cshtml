@model UsersVM
@{
  ViewData["Title"] = "Users";
}

<form method="post" id="control" asp-action="Add">
  <div class="row">
    <div class="col-md-4">
      <button type="submit" class="btn btn-default">Add +</button>
    </div>
  </div>
</form>

@Html.Partial("_GridPartial")

@section Scripts {

  @Html.Partial("_GridIncludePartial")

  <environment include="Development">
    <script src="~/js/Users/Index.js" asp-append-version="true"></script>
  </environment>
  <environment exclude="Development">
    <script src="~/js/Users/Index.min.js" asp-append-version="true"></script>
  </environment>

}